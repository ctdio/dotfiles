{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ctdio/dotfiles/claude/hooks/load-env-context",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hooks/validate-bash",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(cat | jq -r '.tool_input.file_path') && npx prettier --write \"$FILE\" 2>/dev/null || true",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/dotfiles/claude/statusline.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": false,
    "datadog-cli@ctdio-datadog": true,
    "feature-dev@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": false,
    "ralph-wiggum@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "skim@skim": true
  },
  "syntaxHighlightingDisabled": false,
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
