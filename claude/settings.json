{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(nx run platform:type-check:)",
      "Bash(npx nx run platform:type-check:*)",
      "Bash(nx run platform:lint:*)",
      "Bash(npx run platform:lint:*)",
      "Bash(git config:*)",
      "Bash(git log:*)",
      "Bash(gh pr list:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hooks/validate-bash",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-starship.sh"
  },
  "alwaysThinkingEnabled": true
}
