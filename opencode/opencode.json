{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": true,
  "permission": "allow",
  "keybinds": {
    "leader": "ctrl+e",
    "editor_open": "ctrl+g"
  },
  "command": {
    "env": {
      "template": "!`/home/ctdio/dotfiles/opencode/hooks/load-env-context`",
      "description": "Load env context from .env files"
    }
  },
  "mcp": {
    "postgres": {
      "type": "local",
      "command": [
        "mise",
        "exec",
        "--",
        "npx",
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://postgres:postgres@localhost:5432/platform"
      ]
    },
    "context7": {
      "type": "local",
      "command": ["mise", "exec", "--", "npx", "-y", "@upstash/context7-mcp"]
    }
  }
}
