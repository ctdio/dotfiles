[push]
  default = current
  autoSetupRemote = true

[core]
  editor = nvim || ~/nvim.appimage

[merge]
  tool = vimdiff

[mergetool]
  prompt = true

[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[includeIf "gitdir:~/work/jupiterone/"]
  path = ~/work/jupiterone/.gitconfig
