#!/bin/bash

# This script should be sourced, not executed directly
# Add to your shell config: source /path/to/wt

wt() {
  usage() {
    cat <<EOF
Usage: wt <command> [args]

Commands:
  c, create <branch>     Create a new worktree for <branch>
  s, switch              Interactively switch to a worktree (fzf required)
  l, ls, list            List all worktrees
  rm, remove <branch>    Remove the worktree for <branch>
  prune                  Prune stale worktrees
  h, help                Show this help message
EOF
  }

  # Get repo dir name
  repo_dir() {
    basename "$(git rev-parse --show-toplevel 2>/dev/null)"
  }

  # Create worktree
  wt_create() {
    if [ -z "$1" ]; then
      echo "Usage: wt create <branch>"
      return 1
    fi
    local branch="$1"
    local toplevel="$(git rev-parse --show-toplevel 2>/dev/null)"
    if [ -z "$toplevel" ]; then
      echo "Not in a git repository"
      return 1
    fi

    # Save current directory to return to if creation fails
    local current_dir="$(pwd)"

    # Change to git root directory
    cd "$toplevel"

    local dir="../$(repo_dir)-$branch"
    if git worktree add "$dir" "$branch" 2>/dev/null || git worktree add "$dir" -b "$branch"; then
      echo "Created worktree at $dir"
      # Change into the new worktree
      cd "$dir"
    else
      # Return to original directory on failure
      cd "$current_dir"
      return 1
    fi
  }

  # List worktrees
  wt_list() {
    git worktree list
  }

  # Switch to worktree using fzf
  wt_switch() {
    if ! command -v fzf >/dev/null 2>&1; then
      echo "fzf is required for interactive switching. Install it and try again."
      return 1
    fi

    local current_worktree
    current_worktree=$(git rev-parse --show-toplevel 2>/dev/null)

    # Build list with branch names: "path [branch]"
    local worktree_list
    worktree_list=$(git worktree list --porcelain | awk '
      /^worktree / {
        if (path) {
          if (branch) print path " [" branch "]"
          else print path " [detached]"
        }
        path = $2
        branch = ""
      }
      /^branch / { branch = $2; sub(/^refs\/heads\//, "", branch) }
      END {
        if (path) {
          if (branch) print path " [" branch "]"
          else print path " [detached]"
        }
      }
    ')

    local selected
    selected=$(echo "$worktree_list" | fzf \
      --prompt="Switch to worktree: " \
      --header="Current: $current_worktree" \
      --preview='echo {} | cut -d" " -f1 | xargs -I{} git -C {} log --oneline -5' \
      --preview-window=down:5)

    if [ -n "$selected" ]; then
      local target_path
      target_path=$(echo "$selected" | cut -d' ' -f1)
      echo "Switching to worktree: $target_path"
      cd "$target_path"
    else
      echo "No worktree selected."
    fi
  }

  # Remove worktree
  wt_remove() {
    if [ -z "$1" ]; then
      echo "Usage: wt remove <branch>"
      return 1
    fi
    local toplevel="$(git rev-parse --show-toplevel 2>/dev/null)"
    if [ -z "$toplevel" ]; then
      echo "Not in a git repository"
      return 1
    fi

    # Save current directory
    local current_dir="$(pwd)"

    # Change to git root directory to ensure consistent path resolution
    cd "$toplevel"

    local dir="../$(repo_dir)-$1"
    if [ -d "$dir" ]; then
      git worktree remove "$dir"
      echo "Removed worktree $dir"
      # Return to original directory
      cd "$current_dir"
    else
      echo "Worktree $dir does not exist."
      # Return to original directory
      cd "$current_dir"
      return 1
    fi
  }

  # Prune worktrees
  wt_prune() {
    git worktree prune
    echo "Pruned stale worktrees."
  }

  case "$1" in
    c|create)
      shift
      wt_create "$@"
      ;;
    s|switch)
      wt_switch
      ;;
    l|ls|list)
      wt_list
      ;;
    rm|remove)
      shift
      wt_remove "$@"
      ;;
    prune)
      wt_prune
      ;;
    h|help|--help|-h)
      usage
      ;;
    *)
      usage
      return 1
      ;;
  esac
}

# If script is being executed directly, inform user to source it
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  echo "This script must be sourced to work properly."
  echo "Add this line to your ~/.bashrc or ~/.zshrc:"
  echo "  source $(realpath "${BASH_SOURCE[0]}")"
  exit 1
fi
