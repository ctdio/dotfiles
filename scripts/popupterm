#!/bin/bash

current_session_name="$(tmux display-message -p -F "#{session_name}")"
target_session_name="popup-${1:-default}"

if [[ ${current_session_name} == popup-* ]];then
    tmux detach-client
else
    tmux popup \
      -w90% -h90% \
      -E "tmux attach -t ${target_session_name} || tmux new -s ${target_session_name}"
fi
